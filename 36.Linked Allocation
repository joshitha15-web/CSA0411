#include <stdio.h>
#include <stdlib.h>

struct Block {
    int data;
    struct Block* next;
};

int main() {
    int n;
    printf("Enter number of blocks: ");
    scanf("%d", &n);

    struct Block *head = NULL, *temp, *last = NULL;

    for (int i = 0; i < n; i++) {
        temp = (struct Block*)malloc(sizeof(struct Block));
        temp->data = i + 1;
        temp->next = NULL;
        if (head == NULL) head = temp;
        else last->next = temp;
        last = temp;
    }

    printf("Linked Allocation:\n");
    temp = head;
    while (temp != NULL) {
        printf("Block %d -> ", temp->data);
        temp = temp->next;
    }
    printf("NULL\n");
    return 0;
}
