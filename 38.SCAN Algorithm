#include <stdio.h>
#include <stdlib.h>

int compare(const void* a, const void* b) {
    return (*(int*)a - *(int*)b);
}

int main() {
    int queue[] = {98, 183, 37, 122, 14, 124, 65, 67};
    int size = 8, head = 53, direction = 1, seek = 0;
    qsort(queue, size, sizeof(int), compare);

    printf("SCAN Disk Scheduling:\n");
    if (direction == 1) {
        for (int i = 0; i < size; i++) {
            if (queue[i] >= head) {
                seek += abs(queue[i] - head);
                head = queue[i];
                printf("%d ", head);
            }
        }
        seek += abs(199 - head);
        head = 199;
        for (int i = size - 1; i >= 0; i--) {
            if (queue[i] < 53) {
                seek += abs(queue[i] - head);
                head = queue[i];
                printf("%d ", head);
            }
        }
    }
    printf("\nTotal Seek Time: %d\n", seek);
    return 0;
}
