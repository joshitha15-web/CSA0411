#include <stdio.h>
#include <string.h>

int main() {
    FILE *fp = fopen("file.txt", "r");
    char line[256], pattern[50];
    printf("Enter pattern to search: ");
    scanf("%s", pattern);

    while (fgets(line, sizeof(line), fp)) {
        if (strstr(line, pattern)) {
            printf("%s", line);
        }
    }
    fclose(fp);
    return 0;
}
