#include <stdio.h>

struct Process {
    int pid, bt, rt, wt, tat;
};

int main() {
    int n, tq;
    printf("Enter number of processes: ");
    scanf("%d", &n);

    struct Process p[n];

    for (int i = 0; i < n; i++) {
        p[i].pid = i + 1;
        printf("Enter Burst Time for P%d: ", p[i].pid);
        scanf("%d", &p[i].bt);
        p[i].rt = p[i].bt;
        p[i].wt = 0;
    }

    printf("Enter Time Quantum: ");
    scanf("%d", &tq);

    int time = 0, completed = 0;

    while (completed < n) {
        for (int i = 0; i < n; i++) {
            if (p[i].rt > 0) {
                if (p[i].rt > tq) {
                    time += tq;
                    p[i].rt -= tq;
                } else {
                    time += p[i].rt;
                    p[i].wt = time - p[i].bt;
                    p[i].rt = 0;
                    completed++;
                }
            }
        }
    }

    float totalWT = 0, totalTAT = 0;

    printf("\nProcess\tBT\tWT\tTAT\n");
    for (int i = 0; i < n; i++) {
        p[i].tat = p[i].bt + p[i].wt;
        totalWT += p[i].wt;
        totalTAT += p[i].tat;
        printf("P%d\t%d\t%d\t%d\n", p[i].pid, p[i].bt, p[i].wt, p[i].tat);
    }

    printf("\nAvg Waiting Time: %.2f", totalWT / n);
    printf("\nAvg Turnaround Time: %.2f\n", totalTAT / n);

    return 0;
}
